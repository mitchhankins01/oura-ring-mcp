{
  "name": "oura-mcp",
  "version": "0.1.0",
  "description": "MCP server for Oura Ring data with smart analysis tools",
  "type": "module",
  "packageManager": "pnpm@10.15.1",
  "main": "dist/index.js",
  "bin": {
    "oura-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "update-openapi": "bash scripts/update-openapi-spec.sh",
    "generate-types": "npx openapi-typescript oura-openapi.json -o src/types/oura-api.ts",
    "update-types": "pnpm update-openapi && pnpm generate-types"
  },
  "keywords": [
    "mcp",
    "oura",
    "oura-ring",
    "health",
    "sleep",
    "claude",
    "ai"
  ],
  "author": "Mitch Hankins",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "dotenv": "^17.2.3",
    "zod": "^4.3.6"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "js-yaml": "^4.1.1",
    "openapi-typescript": "^7.10.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
